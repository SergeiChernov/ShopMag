
@(Html.DevExtreme().DataGrid<ShopMag.Data.Models.ShopCartItem>()
    .DataSource(ds => ds.Mvc()
        .Controller("DataBaseCartFull")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.id);

        columns.AddFor(m => m.price);

        columns.AddFor(m => m.ShopCartId);

        columns.AddFor(m => m.quantity);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
